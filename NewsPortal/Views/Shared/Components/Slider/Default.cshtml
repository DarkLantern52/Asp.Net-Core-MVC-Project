@inject NewsPortal.Models.IPortalRepository repository
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>


<div id="slider" class="carousel slide" data-ride="carousel" data-interval="300">
    <div class="carousel-inner">
 @{
  
   var newsList = repository.Newscast.ToList();
}

@for(int i = 0; i < newsList.Count; i++)
{   
    <div class="carousel-item @(i == 0 ? "active" : "") ">
            <img src="@newsList[i].Image" class="d-block w-100 " width="100" height="550" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>@newsList[i].Title</h5>
                <p>@newsList[i].Description</p>
            </div>
    </div>
}
    </div>
    <!--======= Navigation Buttons =========-->
     <!--======= Left Button =========-->
        <a class="carousel-control-prev" href="#slider" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
    </a>
       <!--======= Right Button =========-->
    <a class="carousel-control-next" href="#slider" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



